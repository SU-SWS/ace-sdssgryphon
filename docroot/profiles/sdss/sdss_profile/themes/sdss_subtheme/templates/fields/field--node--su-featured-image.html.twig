{# templates/fields/field--node--su-featured-image.html.twig #}
<figure class="align-left caption">
  {% for item in items %}
      {{ item.content }}
  {% endfor %}

  {# Pulling the caption field from the node (parent) #}
  {% if element['#object'].su_featured_image_caption.value %}
    <figcaption>
      {{ element['#object'].su_featured_image_caption.value }}
    </figcaption>
  {% endif %}
</figure>